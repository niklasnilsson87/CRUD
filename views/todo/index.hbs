
<h1>
    <span class="far fa-list-alt"></span> Strings
</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Done</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>

        {{#if locals.toDoItems.length }}
        {{#each locals.toDoItems}}
        <tr>
            <td class="text-center text-primary"><span class="far fa-{{#if done }}check-square{{else}}square{{/if}}"></span></td>
            <td class="w-100 {{#if done }} text-muted {{/if}}">{{description}}</td>
            <td>
               
                <a href="/todo/edit/{{id}}"><span class="far fa-edit"></span></a>
                <a href="/todo/delete/{{id}}"><span class="far fa-trash-alt"></span></a>

            </td>
        </tr>
        {{/each}}
        {{else}}
        <tr>
            <td colspan="3" class="text-center text-danger">
                No to-do items to display.
            </td>
        </tr>
        {{/if}}
 
    </tbody>
</table>